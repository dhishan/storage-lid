{
    "python.pythonPath": "App/.venv/bin/python",
    "configurations": [
        {
            "name": "Python: App",
            "type": "python",
            "request": "launch",
            "program": "App/app.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "./App:${PYTHONPATH}"
            },
        },
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "App/app.py",
                "FLASK_ENV": "development",
                "PYTHONPATH": "./App:${PYTHONPATH}"
            },
            "args": [
                "run",
                "--no-debugger"
            ],
            "jinja": true
        },
        {
            "name": "Python: Connexion",
            "type": "python",
            "request": "launch",
            "module": "connexion",
            "cwd": "${workspaceFolder}/App",
            "env": {
                "PYTHONPATH": "./App:${PYTHONPATH}"
            },
            "args": [
                "run",
                "swagger.yml",
                "--port",
                "5000",
                "--host",
                "0.0.0.0"
            ]
        }
    ],
}